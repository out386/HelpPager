<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Hpg.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="hpg_toolbarTheme">@style/Theme.Hpg.Toolbar.Dark</item>
        <item name="hpg_toolbarPopupTheme">@style/Theme.Hpg.Toolbar.Dark</item>
        <item name="hpg_colour_primary">@color/hpg_text_colour_primary_dark</item>
        <item name="hpg_colour_secondary">@color/hpg_text_colour_secondary_dark</item>
        <item name="hpg_text_colour_tabs">@color/hpg_text_colour_secondary_dark</item>
        <item name="hpg_selected_text_colour_tabs">@color/hpg_text_colour_primary_dark</item>
    </style>

    <style name="Theme.Hpg.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="hpg_toolbarTheme">@style/Theme.Hpg.Toolbar.Light</item>
        <item name="hpg_toolbarPopupTheme">@style/Theme.Hpg.Toolbar.Light</item>
        <item name="hpg_colour_primary">@color/hpg_text_colour_primary</item>
        <item name="hpg_colour_secondary">@color/hpg_text_colour_secondary</item>
        <item name="hpg_text_colour_tabs">@color/hpg_text_colour_secondary</item>
        <item name="hpg_selected_text_colour_tabs">@color/hpg_text_colour_primary</item>
    </style>

    <style name="Theme.Hpg.Light.DarkActionBar">
        <item name="hpg_toolbarTheme">@style/Theme.Hpg.Toolbar.Dark</item>
        <item name="hpg_text_colour_tabs">@color/hpg_text_colour_secondary_dark</item>
        <item name="hpg_selected_text_colour_tabs">@color/hpg_text_colour_primary_dark</item>
    </style>

    <style name="Theme.Hpg.Dark.LightActionBar">
        <item name="hpg_toolbarTheme">@style/Theme.Hpg.Toolbar.Light</item>
        <item name="hpg_text_colour_tabs">@color/hpg_text_colour_secondary</item>
        <item name="hpg_selected_text_colour_tabs">@color/hpg_text_colour_primary</item>
    </style>

    <style name="Theme.Hpg.Toolbar.Dark" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="Theme.Hpg.Toolbar.Light" parent="ThemeOverlay.AppCompat.Light" />

</resources>